def mENTCTRL_FLAP  equ $0F
;; Disable gravity
def bENTCTRL_NOGRAV equ 4
def mENTCTRL_NOGRAV equ 1 << bENTCTRL_NOGRAV


macro entity_index
	assert _NARG == 1
	assert (\1) <= szEntity
	ld a, l
	and $F0
	add (\1)
	ld l, a
endm


