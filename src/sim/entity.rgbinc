def szEntity_DispY   equ 1

rsreset
def Entity_Info    rb szEntity_Info
def Entity_Ctrl    rb szEntity_Ctrl
def Entity_AccX    rb szEntity_AccX
def Entity_VelX    rb szEntity_VelX
def Entity_PosX    rb szEntity_PosX
